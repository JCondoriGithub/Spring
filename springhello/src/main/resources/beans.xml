<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="u1" class="springhello.User" scope="prototype">	<!-- lo scope è prototype, quindi per 1 bean ci possono essere più istanze -->
    	<property name="name" value="Mario"></property>
    	<property name="surname" value="Rossi"></property>
    </bean>
    <bean id="u2" class="springhello.User" primary="true">	<!-- tramite "primary", il getBean per classe prende questo bean -->
    	<property name="name" value="Carlo"></property>
    	<property name="surname" value="Verdi"></property>
    </bean>

</beans>