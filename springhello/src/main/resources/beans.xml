<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config></context:annotation-config>		<!-- le proprietÃ  dei bean si trovano nelle annotazioni -->

	<bean id="admingroup" class="springhello.Group">
		<property name="name" value="ADMIN"></property>
	</bean>
	
	<bean id="usergroup" primary="true" class="springhello.Group">
		<property name="name" value="USER"></property>
	</bean>

    <bean id="u1" class="springhello.User" scope="singleton"></bean>	<!-- si dichiara solo il nome del bean -->
    
	<bean id="userfactory" class="springhello.UserFactory"></bean>
    
